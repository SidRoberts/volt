<?xml version="1.0"?>
<ruleset name="Phalcon">
    <description>Phalcon Coding Standards</description>
    <arg value="-colors"/>
    <arg value="s"/>
    <arg value="p"/>
    <rule ref="PSR12">
        <exclude name="PSR2.Methods.MethodDeclaration.Underscore"/>
        <exclude name="PSR2.ControlStructures.SwitchDeclaration.TerminatingComment"/>
    </rule>
    <file>src</file>
    <file>tests</file>
</ruleset>
